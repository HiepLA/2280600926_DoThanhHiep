@model _2280600926_DoThanhHiep.Models.Product
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Thêm Sản Phẩm";
}

<h2>Thêm Sản Phẩm</h2>

<form asp-action="Add" method="post" enctype="multipart/form-data">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" style="border: 1px solid gray; background-color: #f5f5f5;" />
        <span asp-validation-for="Name" style="color: red;"></span>
    </div>

    <div>
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" style="border: 1px solid gray; background-color: #f5f5f5;" />
        <span asp-validation-for="Price" style="color: red;"></span>
    </div>

    <div>
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" style="border: 1px solid gray; background-color: #f5f5f5;"></textarea>
        <span asp-validation-for="Description" style="color: red;"></span>
    </div>

    <div>
        <label asp-for="CategoryId">Danh Mục</label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control" style="border: 1px solid gray; background-color: #f5f5f5;">
            <option value="">-- Chọn danh mục --</option>
        </select>
        <span asp-validation-for="CategoryId" style="color: red;"></span>
    </div>

    <div>
        <label>Ảnh Sản Phẩm</label>
        <input type="file" name="ImageFiles" class="form-control" multiple style="border: 1px solid gray; background-color: #f5f5f5;" />
        <span style="color: red;">@ViewData["ImageError"]</span>
    </div>

    <button type="submit" style="background-color: #ccc; color: black; padding: 5px 10px; border: 1px solid black;">Thêm</button>
</form>
