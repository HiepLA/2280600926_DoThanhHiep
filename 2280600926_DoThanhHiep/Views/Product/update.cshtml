@model _2280600926_DoThanhHiep.Models.Product
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Cập Nhật Sản Phẩm";
}

<h2>Cập Nhật Sản Phẩm</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <label>Tên Sản Phẩm</label>
    <input asp-for="Name" style="width: 100%; padding: 5px; border: 1px solid gray;" />
    <span asp-validation-for="Name" style="color: red;"></span>
    <br><br>

    <label>Loại Sản Phẩm</label>
    <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" style="width: 100%; padding: 5px; border: 1px solid gray;">
        <option value="">-- Chọn loại --</option>
    </select>
    <span asp-validation-for="CategoryId" style="color: red;"></span>
    <br><br>

    <label>Giá</label>
    <input asp-for="Price" type="number" step="0.01" min="0.01" style="width: 100%; padding: 5px; border: 1px solid gray;" />
    <span asp-validation-for="Price" style="color: red;"></span>
    <br><br>

    <label>Mô Tả</label>
    <textarea asp-for="Description" style="width: 100%; height: 100px; padding: 5px; border: 1px solid gray;"></textarea>
    <span asp-validation-for="Description" style="color: red;"></span>
    <br><br>

    <button type="submit" style="padding: 5px 10px; background: orange; border: none;">Cập Nhật</button>
    <a asp-action="Index" style="padding: 5px 10px; background: gray; color: white; text-decoration: none;">Quay Lại</a>
</form>
